---
import Layout from '../layouts/Layout.astro';

const cityHubs = [
  {
    name: "Madison",
    link: "/locations/madison",
    description: "Our primary service area including Harvest, Triana, and Research Park West.",
    primary: true,
    subAreas: [
      { name: "Harvest", link: "/locations/madison/harvest" },
      { name: "Triana", link: null },
      { name: "Research Park", link: null }
    ]
  },
  {
    name: "Huntsville",
    link: "/locations/huntsville",
    description: "Serving all Huntsville neighborhoods from Downtown to Hampton Cove.",
    primary: false,
    subAreas: [
      { name: "Hampton Cove", link: "/locations/huntsville/hampton-cove" },
      { name: "Owens Cross Roads", link: null },
      { name: "Redstone Arsenal", link: null },
      { name: "Research Park", link: null }
    ]
  },
  {
    name: "Decatur",
    link: "/locations/decatur",
    description: "Morgan County coverage including Somerville and the Tennessee River corridor.",
    primary: false,
    subAreas: [
      { name: "Somerville", link: "/locations/decatur/somerville" },
      { name: "Priceville", link: null }
    ]
  },
  {
    name: "Athens",
    link: "/locations/athens",
    description: "Limestone County's friendliest city and surrounding communities.",
    primary: false,
    subAreas: []
  }
];
---

<Layout title="Service Areas - Madison, Huntsville, Decatur, Athens AL" description="Handyman services in Madison, Huntsville, Decatur, Athens & North Alabama. Fast scheduling, same-day emergency service available.">
  <!-- Hero Section -->
  <section class="bg-blue-900 text-white py-16">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h1 class="text-4xl font-bold mb-4">Service Areas</h1>
      <p class="text-xl text-blue-100 max-w-2xl mx-auto">
        Proudly serving North Alabama across four major city hubs and their surrounding communities.
      </p>
    </div>
  </section>

  <!-- City Hubs Grid -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold mb-8 text-gray-800 text-center">Choose Your Area</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {cityHubs.map((city) => (
          <a href={city.link} class={`block rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow ${city.primary ? 'ring-2 ring-orange-500' : ''}`}>
            <div class={`p-6 ${city.primary ? 'bg-blue-900 text-white' : 'bg-white'}`}>
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-2xl font-bold">{city.name}</h3>
                {city.primary && <span class="text-xs bg-orange-500 px-2 py-1 rounded">Primary Area</span>}
              </div>
              <p class={`mb-4 ${city.primary ? 'text-blue-100' : 'text-gray-600'}`}>{city.description}</p>
              {city.subAreas.length > 0 && (
                <div class={`pt-4 border-t ${city.primary ? 'border-blue-700' : 'border-gray-200'}`}>
                  <p class={`text-sm font-semibold mb-2 ${city.primary ? 'text-blue-200' : 'text-gray-500'}`}>Communities Served:</p>
                  <div class="flex flex-wrap gap-2">
                    {city.subAreas.map((area) => (
                      <span class={`text-sm px-2 py-1 rounded ${city.primary ? 'bg-blue-800 text-blue-100' : 'bg-gray-100 text-gray-700'}`}>
                        {area.name}
                      </span>
                    ))}
                  </div>
                </div>
              )}
              <div class={`mt-4 flex items-center gap-2 ${city.primary ? 'text-orange-400' : 'text-blue-600'}`}>
                <span class="font-medium">View {city.name} services</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Coverage Info -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Why Choose Us</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800">Local Knowledge</h3>
          <p class="text-gray-600">
            We know North Alabama homes inside and out, from historic properties to new construction.
          </p>
        </div>
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800">Quick Response</h3>
          <p class="text-gray-600">
            Same-day service available in most areas. We prioritize getting to you fast.
          </p>
        </div>
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800">Quality Guaranteed</h3>
          <p class="text-gray-600">
            We stand behind our work with a satisfaction guarantee on every job.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-orange-500 text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Not Sure If We Service Your Area?</h2>
      <p class="text-xl mb-8">Give us a call or send a message - we're happy to discuss your location.</p>
      <a
        href="/contact"
        class="bg-white hover:bg-gray-100 text-orange-500 font-bold py-3 px-8 rounded-lg transition-colors text-lg inline-block"
      >
        Contact Us
      </a>
    </div>
  </section>
</Layout>
