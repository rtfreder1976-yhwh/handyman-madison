---
import Layout from "../layouts/Layout.astro";
import TrustCredentials from "../components/TrustCredentials.astro";
import InlineQuoteForm from '../components/InlineQuoteForm.astro';

const cityHubs = [
  {
    name: "Madison",
    link: "/locations/madison",
    description:
      "Our service area including Harvest, Triana, and Research Park West.",
    subAreas: [
      { name: "Harvest", link: "/locations/madison/harvest" },
      { name: "Triana", link: null },
      { name: "Research Park", link: null },
    ],
  },
  {
    name: "Huntsville",
    link: "/locations/huntsville",
    description:
      "Serving all Huntsville neighborhoods from Downtown to Hampton Cove.",
    subAreas: [
      { name: "Hampton Cove", link: "/locations/huntsville/hampton-cove" },
      { name: "Owens Cross Roads", link: null },
      { name: "Redstone Arsenal", link: null },
      { name: "Research Park", link: null },
    ],
  },
  {
    name: "Decatur",
    link: "/locations/decatur",
    description:
      "Morgan County coverage including Somerville and the Tennessee River corridor.",
    subAreas: [
      { name: "Somerville", link: "/locations/decatur/somerville" },
      { name: "Priceville", link: null },
    ],
  },
  {
    name: "Athens",
    link: "/locations/athens",
    description:
      "Limestone County's friendliest city and surrounding communities.",
    subAreas: [],
  },
];
---

<Layout
  title="Service Areas - Madison, Huntsville, Decatur, Athens AL"
  description="Handyman services in Madison, Huntsville, Decatur, Athens & North Alabama. Fast scheduling, same-day emergency service available."
>
  <!-- Hero Section -->
  <section
    class="relative bg-blue-900 text-white pt-32 pb-24 flex items-center overflow-hidden"
  >
    <div class="absolute inset-0 z-0">
      <img
        src="https://images.unsplash.com/photo-1596752763261-f0eb6d05f324?q=80&w=2070&auto=format&fit=crop"
        alt="Map background"
        class="w-full h-full object-cover opacity-20 scale-105 animate-[pulse_10s_ease-in-out_infinite_alternate]"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-blue-950 via-blue-900/90 to-blue-900/60"
      >
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 relative z-10 w-full text-center">
      <div
        class="inline-block px-4 py-2 rounded-full bg-orange-500/20 text-orange-400 font-bold mb-6 text-sm tracking-wider uppercase border border-orange-500/30"
      >
        North Alabama Coverage
      </div>
      <h1 class="text-5xl md:text-7xl font-extrabold mb-6 tracking-tight">
        Our Service <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-orange-600"
          >Areas</span
        >
      </h1>
      <p
        class="text-xl md:text-2xl text-blue-100 max-w-3xl mx-auto font-light leading-relaxed mb-10"
      >
        Proudly serving North Alabama across four major city hubs and their
        surrounding communities with highly specialized master craftsmanship.
      </p>
    </div>

    <!-- Decorative shape divider -->
    <div
      class="absolute bottom-0 left-0 w-full overflow-hidden leading-none z-10 transform scale-y-[-1]"
    >
      <svg
        class="relative block w-full h-[50px] md:h-[100px]"
        data-name="Layer 1"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1200 120"
        preserveAspectRatio="none"
      >
        <path
          d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V120H0V95.8C59.71,118.06,155.15,112.5,231.2,88.45,264.44,77.83,296.88,67.36,321.39,56.44Z"
          class="fill-gray-50"></path>
      </svg>
    </div>
  </section>

  <!-- City Hubs Grid -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold mb-8 text-gray-800 text-center">
        Choose Your Area
      </h2>
      <div class="grid md:grid-cols-2 gap-8">
        {
          cityHubs.map((city) => (
            <a
              href={city.link}
              class="block rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow bg-white"
            >
              <div class="p-6">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="text-2xl font-bold text-gray-900">{city.name}</h3>
                </div>
                <p class="mb-4 text-gray-600">{city.description}</p>
                {city.subAreas.length > 0 && (
                  <div class="pt-4 border-t border-gray-200">
                    <p class="text-sm font-semibold mb-2 text-gray-500">
                      Communities Served:
                    </p>
                    <div class="flex flex-wrap gap-2">
                      {city.subAreas.map((area) => (
                        <span class="text-sm px-2 py-1 rounded bg-blue-50 text-blue-900 font-medium">
                          {area.name}
                        </span>
                      ))}
                    </div>
                  </div>
                )}
                <div class="mt-4 flex items-center gap-2 text-blue-600 font-bold">
                  <span class="font-medium">View {city.name} services</span>
                  <svg
                    class="w-5 h-5 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Service Coverage Info -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">
        Why Choose Us
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div
            class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-blue-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800">
            Local Knowledge
          </h3>
          <p class="text-gray-600">
            We know North Alabama homes inside and out, from historic properties
            to new construction.
          </p>
        </div>
        <div class="text-center p-6">
          <div
            class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800">
            Quick Response
          </h3>
          <p class="text-gray-600">
            Same-day service available in most areas. We prioritize getting to
            you fast.
          </p>
        </div>
        <div class="text-center p-6">
          <div
            class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-8 h-8 text-orange-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800">
            Quality Guaranteed
          </h3>
          <p class="text-gray-600">
            We stand behind our work with a satisfaction guarantee on every job.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Programmatic SEO Service Areas Directory -->
  <section class="py-24 bg-gray-50 border-t border-gray-100">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="text-orange-500 font-bold tracking-wider uppercase text-sm"
          >Targeted Local Service</span
        >
        <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 mt-2 mb-4">
          Granular Services Library
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto text-lg">
          Find highly detailed information about our premium handyman services
          specific to your exact neighborhood in North Alabama.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          ["Madison", "Huntsville", "Athens", "Decatur"].map((city) => {
            const citySlug = city.toLowerCase().replace(" ", "-") + "-al";
            const services = [
              { name: "Drywall Repair", slug: "drywall-repair" },
              { name: "Interior Painting", slug: "interior-painting" },
              { name: "Exterior Painting", slug: "exterior-painting" },
              { name: "Gutter Cleaning", slug: "gutter-cleaning" },
              { name: "Gutter Installation", slug: "gutter-installation" },
              { name: "Flooring Setup", slug: "flooring-installation" },
              { name: "Finish Carpentry", slug: "finish-carpentry" },
            ];

            return (
              <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-200 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                <h3 class="text-2xl font-bold text-gray-900 mb-6 pb-4 border-b border-gray-200 flex items-center gap-3">
                  <svg
                    class="w-6 h-6 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                    </>
                  </svg>
                  {city}, AL
                </h3>
                <ul class="space-y-4">
                  {services.map((s) => (
                    <li>
                      <a
                        href={`/services/${s.slug}-${citySlug}`}
                        class="text-gray-600 hover:text-orange-500 font-medium group flex items-center gap-3 transition-colors"
                      >
                        <span class="w-1.5 h-1.5 rounded-full bg-blue-400 group-hover:scale-150 transition-transform" />
                        {s.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            );
          })
        }
      </div>
    </div>
  </section>

  <InlineQuoteForm />

  <TrustCredentials />

  <!-- CTA -->
  <section class="py-24 relative bg-blue-900 overflow-hidden">
    <div
      class="absolute top-0 right-0 w-[500px] h-[500px] bg-blue-800 rounded-full blur-[100px] opacity-50 mix-blend-screen -mr-40 -mt-40"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-orange-600/30 rounded-full blur-[120px] opacity-50 mix-blend-screen -ml-40 -mb-40"
    >
    </div>

    <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
      <h2
        class="text-4xl md:text-5xl font-extrabold mb-6 text-white leading-tight"
      >
        Ready to Get Started?
      </h2>
      <p class="text-xl md:text-2xl mb-12 text-blue-100 font-light">
        Don't let home repairs pile up. Text us a photo right now and let's
        cross it off your to-do list.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-6">
        <a
          href="sms:2565550123"
          class="bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-bold py-4 px-10 rounded-xl transition-all duration-300 text-lg flex items-center justify-center gap-2 shadow-xl shadow-orange-500/20 hover:shadow-orange-500/40 hover:-translate-y-1 border border-orange-400/30"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"
            ></path>
          </svg>
          Text Us A Photo
        </a>
        <a
          href="/contact"
          class="bg-white hover:bg-gray-50 text-blue-900 font-bold py-4 px-10 rounded-xl transition-all duration-300 text-lg shadow-xl hover:shadow-2xl hover:-translate-y-1"
        >
          Use Standard Form
        </a>
      </div>
    </div>
  </section>
</Layout>
