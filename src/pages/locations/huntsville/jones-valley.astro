---
import Layout from "../../../layouts/Layout.astro";
import TrustCredentials from "../../../components/TrustCredentials.astro";
import InlineQuoteForm from "../../../components/InlineQuoteForm.astro";

const neighborhoods = [
    {
        name: "The Ledges",
        description:
            "The absolute pinnacle of Huntsville luxury living. These massively custom mountaintop estates demand flawlessly executed specialized trim carpentry, precise door alignments, and utter architectural perfection to maintain their staggering valuations.",
        responseTime: "Same day available",
        commonServices: [
            "Custom finish carpentry",
            "Cabinet refinishing",
            "High-end fixture installation",
            "Wainscoting",
        ],
    },
    {
        name: "Valley Bend Border",
        description:
            'Homes nestled deeply toward the retail and dining epicenter of South Huntsville. Extremely fast-paced professionals heavily prioritize hyper-responsive, totally reliable craftsmen to rapidly handle their essential "to-do" lists.',
        responseTime: "Same day available",
        commonServices: [
            "Rapid drywall patches",
            "Door alignments",
            "Gutter clearing",
            "Deck sealing",
        ],
    },
    {
        name: "Green Mountain Ascent",
        description:
            "Properties built violently into the dramatically steep slopes of Green Mountain. This extreme topography causes massively erratic water drainage, requiring intensely durable guttering systems and incredibly robust deck substructures.",
        responseTime: "Same day available",
        commonServices: [
            "6-inch gutter installation",
            "Deck structural repair",
            "Fascia rot eradication",
            "Waterproofing",
        ],
    },
    {
        name: "Jones Valley Estates",
        description:
            "The highly established, intensely coveted legacy neighborhood featuring massive, mature, decades-old oak trees. These absolutely beautiful older homes constantly require extensive, surgical exterior wood rot repair and complete exterior repainting.",
        responseTime: "Same day available",
        commonServices: [
            "Wood rot elimination",
            "Exterior painting",
            "Window sill rebuilding",
            "Hardwood repair",
        ],
    },
];

const majorEmployers = [
    {
        name: "Huntsville Hospital Executives",
        employees: "8,000+",
        description:
            "Jones Valley's immediate proximity to the Huntsville Medical District makes it extremely attractive to top surgeons and medical executives who violently require completely hands-off, ultra-reliable home management solutions.",
    },
    {
        name: "Redstone Arsenal Commuters",
        employees: "40,000+",
        description:
            "Defense contractors utilizing the insanely fast Memorial Parkway commute. We routinely service military families requiring incredibly rapid, heavily verified repair work prior to tight PCS deployment timelines.",
    },
    {
        name: "Downtown Professionals",
        employees: "10,000+",
        description:
            "Lawyers and financial executives who absolutely value extreme discretion, flawlessly clean work sites (involving HEPA-filtered vacuum systems), and radically transparent, itemized quotes.",
    },
];

const weatherChallenges = [
    {
        season: "Spring (March-May)",
        challenge: "Catastrophic Tree Debris",
        impact: "Jones Valley is heavily defined by its massive, towering trees. Violent spring storms incredibly aggressively tear off massive branches, completely shattering gutters, tearing through fascia boards, and instantly destroying expensive wooden fencing.",
        services:
            "Emergency gutter replacement, fascia board splicing, fence rebuilding",
    },
    {
        season: "Summer (June-August)",
        challenge: "Mountain Humidity Trapping",
        impact: "The incredible geography of the valley physically traps thick, intensely deep humidity. This heavily accelerates paint bubbling, exterior sealant failure, and massive, stealthy deck-joist rot.",
        services:
            "Exterior sealing, wood rot excavation, intense deck staining",
    },
    {
        season: "Fall (September-November)",
        challenge: "Unstoppable Leaf Clogging",
        impact: "The sheer volume of incredibly massive oak leaves utterly dominates the rooflines of Jones Valley. Completely clogged gutters violently force massive lakes of water heavily backward into the soffits, utterly destroying them.",
        services:
            "Aggressive gutter cleanouts, leaf guard installation, soffit repair",
    },
    {
        season: "Winter (December-February)",
        challenge: "Elevation Ice Dams",
        impact: "Homes positioned higher up on Green Mountain or The Ledges face dramatically lower localized temperatures, creating extremely dangerous ice dams that physically rip gutters completely off the home.",
        services: "Gutter reinforcement, weatherstripping, pipe insulation",
    },
];

const competitors = [
    {
        feature: "Wood Rot Repair",
        us: "Seamless PVC and multi-tool surgical splicing",
        others: "Slapping wood putty over wet rot",
    },
    {
        feature: "Paint Application",
        us: "Massive HVLP sprayers and extreme masking",
        others: "Fuzzy rollers and sloppy brush strokes",
    },
    {
        feature: "Job Site Integrity",
        us: "Heavy zip-walls, floor armor, and shoe covers",
        others: "Muddy boots strictly inside your totally pristine home",
    },
    {
        feature: "Estimation Process",
        us: "Fully written, heavily detailed line-item contracts",
        others: "A wildly vague number aggressively scribbled on a napkin",
    },
];

const neighborhoodFacts = [
    "Historically incredibly affluent neighborhood bordering Monte Sano and Green Mountain",
    "Features both mid-century legacy homes and massive, totally new multi-million dollar estates",
    "Zoned heavily for the immensely popular Jones Valley Elementary and Grissom High School",
    "Offers completely unparalleled access to the Robert Trent Jones Golf Trail at Hampton Cove",
    "Extremely highly coveted legacy real estate footprint in South Huntsville",
];
---

<Layout
    title="Jones Valley Finish Carpentry & Maintenance | Huntsville AL"
    description="Master finish carpentry, flawless cabinet painting, and elite-level home maintenance tailored exclusively for the massive estates of Jones Valley, Huntsville."
>
    <!-- Hero Section -->
    <section class="bg-blue-900 text-white py-16">
        <div class="max-w-6xl mx-auto px-4">
            <div class="max-w-3xl">
                <nav class="text-sm text-blue-200 mb-4">
                    <a href="/locations" class="hover:text-white"
                        >Service Areas</a
                    >
                    <span class="mx-2">/</span>
                    <a href="/locations/huntsville" class="hover:text-white"
                        >Huntsville</a
                    >
                    <span class="mx-2">/</span>
                    <span class="text-white">Jones Valley</span>
                </nav>
                <span
                    class="text-orange-400 font-semibold text-sm uppercase tracking-wide"
                    >Huntsville's Premier Legacy Neighborhood</span
                >
                <h1 class="text-4xl md:text-5xl font-bold mt-2 mb-4">
                    Flawless Craftsmanship for Jones Valley Estates
                </h1>
                <p class="text-xl text-blue-100 mb-6">
                    Whether you fiercely reside in a completely stunning
                    mid-century legacy home highly hidden under the towering
                    oaks of Jones Valley Estates, or a massive, completely
                    unparalleled totally new architectural marvel sitting
                    perfectly atop The Ledges, Rittenworx aggressively provides
                    the extremely discreet, flawlessly executed finish carpentry
                    and surgical home repairs your radically expensive property
                    absolutely demands.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a
                        href="/contact"
                        class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-6 rounded-lg transition-colors"
                    >
                        Get Free Estimate
                    </a>
                    <a
                        href="tel:2562210373"
                        class="bg-white/10 hover:bg-white/20 text-white font-bold py-3 px-6 rounded-lg transition-colors"
                    >
                        (256) 221-0373
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Neighborhood Breakdown -->
    <section class="py-16 bg-white">
        <div class="max-w-6xl mx-auto px-4">
            <div class="text-center mb-12">
                <span
                    class="text-orange-500 font-semibold text-sm uppercase tracking-wide"
                    >Total Valley Coverage</span
                >
                <h2 class="text-3xl font-bold text-gray-800 mt-2">
                    Intimate Neighborhood Knowledge
                </h2>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    neighborhoods.map((neighborhood) => (
                        <div class="bg-gray-50 rounded-lg p-6 border-2 border-gray-100 hover:border-blue-200 transition-colors">
                            <h3 class="text-lg font-bold text-blue-900 mb-2">
                                {neighborhood.name}
                            </h3>
                            <p class="text-gray-600 text-sm mb-4">
                                {neighborhood.description}
                            </p>
                            <div>
                                <p class="text-xs font-semibold text-gray-500 uppercase mb-2">
                                    Specialized Focus
                                </p>
                                <div class="flex flex-wrap gap-1">
                                    {neighborhood.commonServices.map(
                                        (service) => (
                                            <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">
                                                {service}
                                            </span>
                                        ),
                                    )}
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Weather & Demographics -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-6xl mx-auto px-4">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div>
                    <span
                        class="text-orange-500 font-semibold text-sm uppercase tracking-wide"
                        >The Mountain Environment</span
                    >
                    <h2 class="text-3xl font-bold text-gray-800 mt-2 mb-6">
                        Eradicating Extreme Wood Rot
                    </h2>
                    <p class="text-gray-600 mb-4">
                        Jones Valley is incredibly famous for its massive,
                        incredibly beautiful established tree canopy. However,
                        that canopy casts absolutely massive shadows and
                        physically traps immense humidity against the deeply
                        painted exteriors of these legacy homes.
                    </p>
                    <p class="text-gray-600 mb-4">
                        If a standard exterior painter completely violently
                        rolls cheap latex paint heavily over incredibly damp,
                        rotting window sills, the paint will totally predictably
                        peel entirely off within 14 months. We incredibly
                        passionately completely eradicate the underlying soft
                        wood using completely advanced multi-tools, splice in
                        totally structurally impervious Cellular PVC, and
                        perfectly seal it before executing flawless exterior
                        paint prep.
                    </p>
                    <p class="text-gray-600">
                        For interior renovations, our incredibly massive HVLP
                        sprayers apply absolutely pristine, entirely streak-free
                        glass-like urethane enamel to incredibly dated honey-oak
                        kitchen cabinets, instantly modernizing totally classic
                        Jones Valley kitchens into massively ultra-luxury
                        culinary spaces.
                    </p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-bold text-blue-900 mb-4">
                        The South Huntsville Elements
                    </h3>
                    <ul class="space-y-3">
                        {
                            weatherChallenges.map((challenge) => (
                                <li class="flex items-start gap-3">
                                    <svg
                                        class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                                        />
                                    </svg>
                                    <span class="text-gray-700">
                                        <strong>{challenge.season}:</strong>{" "}
                                        {challenge.impact}
                                    </span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Competitors -->
    <section class="py-16 bg-white">
        <div class="max-w-6xl mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-800 mt-2">
                    The Rittenworx Execution Difference
                </h2>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full bg-gray-50 rounded-lg overflow-hidden">
                    <thead class="bg-blue-900 text-white">
                        <tr>
                            <th class="px-6 py-4 text-left"
                                >The Project Factor</th
                            >
                            <th class="px-6 py-4 text-left"
                                >Our Refined Approach</th
                            >
                            <th class="px-6 py-4 text-left">The Compromise</th>
                        </tr>
                    </thead>
                    <tbody>
                        {
                            competitors.map((row, index) => (
                                <tr
                                    class={
                                        index % 2 === 0
                                            ? "bg-white"
                                            : "bg-gray-50"
                                    }
                                >
                                    <td class="px-6 py-4 font-medium text-gray-800">
                                        {row.feature}
                                    </td>
                                    <td class="px-6 py-4 text-green-600 font-medium">
                                        {row.us}
                                    </td>
                                    <td class="px-6 py-4 text-gray-500">
                                        {row.others}
                                    </td>
                                </tr>
                            ))
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <InlineQuoteForm />
    <TrustCredentials />
</Layout>
