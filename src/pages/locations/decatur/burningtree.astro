---
import Layout from "../../../layouts/Layout.astro";
import TrustCredentials from "../../../components/TrustCredentials.astro";
import InlineQuoteForm from "../../../components/InlineQuoteForm.astro";

const neighborhoods = [
    {
        name: "Burningtree Country Club",
        description:
            "The highly exclusive homes immediately surrounding the 18-hole George Cobb championship golf course and country club. These stunning legacy homes require exceptionally meticulous finish carpentry and absolutely pristine cabinet painting that perfectly matches their high-end aesthetic.",
        responseTime: "Same day available",
        commonServices: [
            "Custom trim & molding",
            "HVLP cabinet painting",
            "Hardwood flooring repair",
            "Wainscoting",
        ],
    },
    {
        name: "Burningtree Estates",
        description:
            "The heavily established, deeply wooded lots radiating outward from the club. The intense tree canopy combined with the age of these 1970s and 1980s homes frequently necessitates aggressive fascia rot repair and comprehensive gutter system overhauls.",
        responseTime: "Same day available",
        commonServices: [
            "Fascia rot replacement",
            "Seamless gutter install",
            "Deck structural repair",
            "Exterior painting",
        ],
    },
    {
        name: "Indian Hills Border",
        description:
            "The sprawling, highly established properties adjacent to the Burningtree area. These massively solid homes often require major interior cosmetic updates, specifically replacing incredibly dated 1980s hollow-core doors with heavy, modern solid-core alternatives.",
        responseTime: "Same day available",
        commonServices: [
            "Solid core doors",
            "Drywall finishing",
            "Trim baseboards",
            "Fixture upgrades",
        ],
    },
    {
        name: "Highway 67 Corridor",
        description:
            "Properties strategically nestled near the incredibly convenient Highway 67 access points. Highly busy professionals here completely rely on us for completely hands-off, radical-transparency project management and incredibly fast 'honey-do' list execution.",
        responseTime: "Same day available",
        commonServices: [
            "General maintenance",
            "TV mounting",
            "Door alignments",
            "Rapid drywall patches",
        ],
    },
];

const majorEmployers = [
    {
        name: "Decatur Morgan Hospital Physicians",
        employees: "1,200+",
        description:
            "Medical professionals who utterly demand completely seamless, keyless-entry service execution that perfectly safely accommodates their intensely demanding rotational shift schedules.",
    },
    {
        name: "United Launch Alliance (ULA)",
        employees: "800+",
        description:
            "Aerospace engineers who absolutely highly value radically transparent, incredibly detailed line-item estimating over wildly vague contractor guesses.",
    },
    {
        name: "3M Decatur Plant",
        employees: "1,000+",
        description:
            "Industrial executives who heavily require totally discreet, completely silent, and exceptionally clean job sites (utilizing heavy HEPA vacuums) inside their pristine homes.",
    },
];

const weatherChallenges = [
    {
        season: "Spring (March-May)",
        challenge: "Catastrophic Tree Debris",
        impact: "Burningtree is heavily defined by its massive, towering legacy tree canopy. Violent spring thunderstorms incredibly aggressively tear off massive branches, completely shattering gutters and tearing completely through aging fascia boards.",
        services:
            "Emergency gutter replacement, fascia board splicing, roofline sealing",
    },
    {
        season: "Summer (June-August)",
        challenge: "Extreme Humidity Trapping",
        impact: "The incredible geography and heavy forestation physically traps thick, intensely deep summer humidity. This heavily accelerates exterior paint bubbling, sealant failure, and massive, stealthy deck-joist rot.",
        services:
            "Exterior sealing, wood rot excavation, intense deck staining",
    },
    {
        season: "Fall (September-November)",
        challenge: "Unstoppable Leaf Clogging",
        impact: "The sheer volume of incredibly massive oak leaves utterly dominates the complex rooflines of Burningtree homes. Completely clogged gutters violently force massive lakes of water heavily backward into the soffits.",
        services:
            "Aggressive gutter cleanouts, leaf guard installation, soffit repair",
    },
    {
        season: "Winter (December-February)",
        challenge: "Deep Freeze Trim Shock",
        impact: "When the intensely dry HVAC system completely runs utterly non-stop during hard freezes, absolutely huge massive wooden crown molding violently shrinks. This massively tears the heavily applied caulk joints apart.",
        services:
            "Crown molding caulk repair, finish carpentry touchups, weatherstripping",
    },
];

const competitors = [
    {
        feature: "Wood Rot Repair",
        us: "Incredibly surgical PVC multi-tool splicing",
        others: "Wildly stuffing weak, incredibly soft Bondo over totally wet wood",
    },
    {
        feature: "Kitchen Cabinet Upgrades",
        us: "Completely pristine, entirely flawless HVLP Enamel Spraying",
        others: "Incredibly horribly bumpy, wildly streaky cheap fuzzy rollers",
    },
    {
        feature: "Job Site Integrity",
        us: "Heavy zip-walls, floor armor, and shoe covers",
        others: "Muddy boots strictly inside your totally pristine home",
    },
    {
        feature: "Estimation Process",
        us: "Fully written, heavily detailed line-item contracts",
        others: "A wildly vague number aggressively scribbled on a napkin",
    },
];

const neighborhoodFacts = [
    "One of Decatur's most affluent, executive-planned communities",
    "Anchored entirely by the highly exclusive Burningtree Country Club",
    "Features massive, completely established legacy estates built heavily in the 1970s and 1980s",
    "Incredibly heavily forested, creating gorgeous but highly demanding exterior maintenance requirements",
    "Located in Southeast Decatur with rapid, seamless access to I-65 and Highway 67",
];
---

<Layout
    title="Burningtree Handyman & Finish Carpentry | Decatur AL"
    description="Master finish carpentry, flawless HVLP cabinet painting, and elite-level home maintenance tailored exclusively for the massive estates of Burningtree in Decatur."
>
    <!-- Hero Section -->
    <section class="bg-blue-900 text-white py-16">
        <div class="max-w-6xl mx-auto px-4">
            <div class="max-w-3xl">
                <nav class="text-sm text-blue-200 mb-4">
                    <a href="/locations" class="hover:text-white"
                        >Service Areas</a
                    >
                    <span class="mx-2">/</span>
                    <a href="/locations/decatur" class="hover:text-white"
                        >Decatur</a
                    >
                    <span class="mx-2">/</span>
                    <span class="text-white">Burningtree</span>
                </nav>
                <span
                    class="text-orange-400 font-semibold text-sm uppercase tracking-wide"
                    >Decatur's Premier Country Club Community</span
                >
                <h1 class="text-4xl md:text-5xl font-bold mt-2 mb-4">
                    Flawless Craftsmanship for Burningtree Estates
                </h1>
                <p class="text-xl text-blue-100 mb-6">
                    Whether your wildly stunning estate sits absolutely
                    flawlessly on the 18th hole of the Burningtree Country Club,
                    or you fiercely reside completely hidden under the
                    incredibly massive oak canopy of Burningtree Estates, you
                    absolutely cannot entrust your deeply expensive legacy home
                    to a standard discount contractor. Rittenworx completely
                    meticulously delivers utterly flawless, perfectly surgical
                    finish carpentry and elite home maintenance for Decatur's
                    most demanding homeowners.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a
                        href="/contact"
                        class="bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-6 rounded-lg transition-colors"
                    >
                        Get Free Estimate
                    </a>
                    <a
                        href="tel:2562210373"
                        class="bg-white/10 hover:bg-white/20 text-white font-bold py-3 px-6 rounded-lg transition-colors"
                    >
                        (256) 221-0373
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Neighborhood Breakdown -->
    <section class="py-16 bg-white">
        <div class="max-w-6xl mx-auto px-4">
            <div class="text-center mb-12">
                <span
                    class="text-orange-500 font-semibold text-sm uppercase tracking-wide"
                    >Highly Nuanced Expertise</span
                >
                <h2 class="text-3xl font-bold text-gray-800 mt-2">
                    Intimate Burningtree Knowledge
                </h2>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    neighborhoods.map((neighborhood) => (
                        <div class="bg-gray-50 rounded-lg p-6 border-2 border-gray-100 hover:border-blue-200 transition-colors">
                            <h3 class="text-lg font-bold text-blue-900 mb-2">
                                {neighborhood.name}
                            </h3>
                            <p class="text-gray-600 text-sm mb-4">
                                {neighborhood.description}
                            </p>
                            <div>
                                <p class="text-xs font-semibold text-gray-500 uppercase mb-2">
                                    Specialized Focus
                                </p>
                                <div class="flex flex-wrap gap-1">
                                    {neighborhood.commonServices.map(
                                        (service) => (
                                            <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">
                                                {service}
                                            </span>
                                        ),
                                    )}
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Weather & Demographics -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-6xl mx-auto px-4">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div>
                    <span
                        class="text-orange-500 font-semibold text-sm uppercase tracking-wide"
                        >The Forest Environment</span
                    >
                    <h2 class="text-3xl font-bold text-gray-800 mt-2 mb-6">
                        Eradicating Extreme Wood Rot & Modernizing Kitchens
                    </h2>
                    <p class="text-gray-600 mb-4">
                        Burningtree is incredibly famous for its massive,
                        incredibly beautiful established tree canopy. However,
                        that canopy casts absolutely massive shadows and
                        physically traps immense humidity against the deeply
                        painted exteriors of these legacy 1980s homes.
                    </p>
                    <p class="text-gray-600 mb-4">
                        If a standard exterior painter completely violently
                        rolls cheap latex paint heavily over incredibly damp,
                        rotting window sills, the paint will totally predictably
                        peel entirely off within 14 months. We incredibly
                        passionately completely eradicate the underlying soft
                        wood using completely advanced multi-tools, splice in
                        totally structurally impervious Cellular PVC, and
                        perfectly seal it before executing flawless exterior
                        paint prep.
                    </p>
                    <p class="text-gray-600">
                        For interior renovations, our incredibly massive HVLP
                        sprayers apply absolutely pristine, entirely streak-free
                        glass-like urethane enamel to incredibly dated honey-oak
                        kitchen cabinets, instantly modernizing totally classic
                        Burningtree kitchens into massively ultra-luxury
                        culinary spaces.
                    </p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-bold text-blue-900 mb-4">
                        Burningtree Details
                    </h3>
                    <ul class="space-y-3">
                        {
                            neighborhoodFacts.map((fact) => (
                                <li class="flex items-start gap-3">
                                    <svg
                                        class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M5 13l4 4L19 7"
                                        />
                                    </svg>
                                    <span class="text-gray-700">{fact}</span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Weather Challenges -->
    <section class="py-16 bg-white">
        <div class="max-w-6xl mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-800 mt-2">
                    Combating The Southeast Decatur Elements
                </h2>
            </div>
            <div class="grid md:grid-cols-2 gap-6">
                {
                    weatherChallenges.map((challenge) => (
                        <div class="bg-gray-50 rounded-lg p-6 border-l-4 border-blue-500">
                            <div class="flex items-center gap-3 mb-3">
                                <div>
                                    <h3 class="font-bold text-gray-800">
                                        {challenge.season}
                                    </h3>
                                    <p class="text-sm text-orange-600 font-medium">
                                        {challenge.challenge}
                                    </p>
                                </div>
                            </div>
                            <p class="text-gray-600 text-sm mb-3">
                                {challenge.impact}
                            </p>
                            <p class="text-xs text-blue-800">
                                <strong>Our Solutions:</strong>{" "}
                                {challenge.services}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <InlineQuoteForm />
    <TrustCredentials />
</Layout>
