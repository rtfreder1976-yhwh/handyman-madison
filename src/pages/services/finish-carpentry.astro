  { city: "Hazel Green", driveTime: "20-30 min", note: "Serving this area" },
  { city: "Owens Cross Roads", driveTime: "25-35 min", note: "Serving this area" },
  { city: "Hampton Cove", driveTime: "20-30 min", note: "Serving this area" },
  { city: "Redstone Arsenal", driveTime: "15-25 min", note: "Same-day available" }
];

const trimStyles = [
  { name: "Colonial", description: "Classic American style with gentle curves", best: "Traditional homes" },
  { name: "Craftsman", description: "Simple, flat profiles with clean lines", best: "Bungalows, modern homes" },
  { name: "Victorian", description: "Ornate, detailed profiles", best: "Historic homes" },
  { name: "Modern/Contemporary", description: "Minimal, square-edge profiles", best: "New construction, minimalist style" },
  { name: "Farmhouse", description: "Simple baseboards with shiplap accents", best: "Farmhouse, rustic style" }
];
---

<Layout title="Finish Carpentry" description="Professional finish carpentry in Madison, Huntsville & North Alabama. Crown molding, baseboards, wainscoting, built-ins. Free estimates, expert craftsmanship.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-900 to-blue-700 text-white py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4">
