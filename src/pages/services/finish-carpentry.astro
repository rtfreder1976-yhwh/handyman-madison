const commonProblems = [
  {
    problem: "Gaps between trim and walls or ceilings",
    solution: "We re-secure loose trim, caulk gaps, and repaint for seamless results. For severe gaps, we replace damaged sections."
  },
  {
    problem: "Outdated or damaged baseboards",
    solution: "We remove old baseboards and install new ones in your choice of style — from simple to ornate. We match existing trim or upgrade your entire home."
  },
  {
    problem: "Missing or inconsistent trim throughout the home",
    solution: "We install matching trim throughout your home for a cohesive, finished look that increases value."
  },
  {
    problem: "Crown molding that's pulling away or cracking",
    solution: "We re-secure crown molding, fill cracks, and touch up paint. For damaged pieces, we install matching replacements."
  },
  {
    problem: "Bare walls needing character and style",
    solution: "We add wainscoting, board and batten, or shiplap to transform plain walls into architectural features."
  },
  {
    problem: "Poorly done previous trim work with visible gaps or bad joints",
    solution: "We correct amateur work with proper cutting techniques and professional installation for clean, tight joints."
  },
  {
    problem: "Need for custom storage and built-ins",
    solution: "We design and build custom shelving, bookcases, and storage solutions that maximize space and add value."
  },
  {
    problem: "Stair railings that are loose or outdated",
    solution: "We repair or replace balusters, secure handrails, and refinish or paint railings to update your stairway."
  }
];

const processSteps = [
  {
    step: 1,
    title: "Contact & Consultation",
    description: "Call or message us about your trim and carpentry project. We discuss style options, wood types, and design possibilities for your space.",
    time: "Same day response"
  },
  {
    step: 2,
    title: "Free On-Site Estimate",
    description: "We measure your space, assess wall conditions, and discuss style options. You receive a detailed written quote including materials and labor.",
    time: "Within 48 hours"
  },
  {
    step: 3,
    title: "Material Selection",
    description: "Choose from various trim profiles, wood types (MDF, pine, oak, poplar), and finish options. We bring samples to help you visualize the final result.",
    time: "Flexible"
  },
  {
    step: 4,
    title: "Schedule Installation",
    description: "Pick dates that work for you. We confirm appointments 24 hours and 2 hours before arrival. Most projects scheduled within 5-7 days.",
    time: "5-7 days typically"
  },
  {
    step: 5,
    title: "Precision Measuring & Cutting",
    description: "We measure each piece precisely, accounting for corners and wall irregularities. All cuts made with professional miter saws for perfect joints.",
    time: "Varies by scope"
  },
  {
    step: 6,
    title: "Professional Installation",
    description: "Trim is secured with appropriate fasteners, joints are tight and clean, and all pieces are aligned perfectly. We cope inside corners for seamless results.",
    time: "1-3 days typical"
  },
  {
    step: 7,
    title: "Finishing & Caulking",
    description: "We fill nail holes, caulk gaps between trim and walls, and sand any rough spots. Everything is prepped for paint or left ready for staining.",
    time: "Final day"
  },
  {
    step: 8,
    title: "Final Walkthrough",
    description: "We inspect every joint and corner with you. We don't leave until you're completely satisfied with the craftsmanship.",
    time: "30 minutes"
  }
];

const faqs = [
  {
    question: "How much does crown molding installation cost?",
    answer: "Crown molding typically costs $8-15 per linear foot installed, depending on the profile size and complexity. A typical room (50 linear feet) runs $400-750. Multi-piece crown assemblies and custom work cost more. We provide free detailed estimates."
  },
  {
    question: "What's the difference between MDF and wood trim?",
    answer: "MDF (medium-density fiberboard) is more affordable, doesn't warp, and paints beautifully — ideal for painted trim. Solid wood (pine, oak, poplar) costs more but can be stained to show natural grain. We recommend MDF for most painted applications."
  },
  {
    question: "Can you match my existing trim style?",
    answer: "Usually, yes. We can match most standard profiles or have custom trim milled to match older or unique styles. Bring us a sample or photos and we'll find a solution."
  },
  {
    question: "How long does baseboard installation take?",
    answer: "A typical room takes 2-4 hours. A whole house (average 200 linear feet) usually takes 1-2 days including removing old baseboards, installation, and caulking."
  },
  {
    question: "Do you paint or stain the trim?",
    answer: "We can! We offer primed trim ready for paint, or we can paint/stain as part of the project. Many customers prefer pre-primed MDF that we install and then paint after caulking."
  },
  {
    question: "What is coping and why does it matter?",
    answer: "Coping is a cutting technique for inside corners that creates tighter joints than simple miter cuts. As walls shift over time, coped joints stay tight while mitered joints can gap. We cope all inside corners for lasting results."
  },
  {
    question: "Can you add trim to a room that has none?",
    answer: "Absolutely! Adding baseboards, crown molding, and door/window casings transforms a basic room into a finished, polished space. It's one of the best value-add improvements for any home."
  },
  {
    question: "Do you install wainscoting?",
    answer: "Yes! We install all styles: beadboard, raised panel, flat panel, board and batten, and shiplap. Wainscoting adds character, protects walls, and increases home value."
  },
  {
    question: "How do you handle corners that aren't square?",
    answer: "Older homes often have out-of-square walls. We use techniques like back-cutting, scribing, and flexible caulk to achieve tight-fitting trim even on imperfect walls."
  },
  {
    question: "Can you build custom bookcases or built-ins?",
    answer: "Yes! We design and build custom shelving, bookcases, window seats, and entertainment centers. Built-ins maximize space and add significant value to your home."
  }
];

const serviceAreas = [
  { city: "Madison", driveTime: "Local", note: "Same-day available" },
  { city: "Huntsville", driveTime: "10-20 min", note: "Same-day available" },
  { city: "Decatur", driveTime: "25-35 min", note: "Serving this area" },
