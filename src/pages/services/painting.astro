  <!-- Paint Finish Guide -->
  <section class="py-12 bg-blue-50">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-center mb-8 text-gray-800">Paint Finish Guide</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-5 gap-4">
        {paintTypes.map((paint) => (
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h3 class="font-bold text-blue-900 mb-2">{paint.name}</h3>
            <p class="text-sm text-gray-600 mb-1"><strong>Best for:</strong> {paint.best}</p>
            <p class="text-xs text-gray-500">{paint.note}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Common Problems We Solve -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Common Problems We Solve</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Whatever painting challenge you're facing, we have the expertise to fix it right.
        </p>
      </div>
      <div class="grid md:grid-cols-2 gap-6">
        {commonProblems.map((item) => (
          <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-100">
            <div class="flex gap-4">
              <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-800 mb-2">{item.problem}</h3>
                <p class="text-gray-600 text-sm flex items-start gap-2">
                  <svg class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  {item.solution}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Process -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Our Painting Process</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          A proven process that delivers beautiful, lasting results every time.
        </p>
      </div>
      <div class="relative">
        <!-- Timeline line -->
        <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-blue-100"></div>

        <div class="space-y-8 md:space-y-12">
          {processSteps.map((step, index) => (
            <div class={`flex flex-col md:flex-row gap-4 md:gap-8 ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
              <div class={`flex-1 ${index % 2 === 0 ? 'md:text-right' : 'md:text-left'}`}>
                <div class={`bg-gray-50 rounded-lg p-6 border border-gray-100 ${index % 2 === 0 ? 'md:mr-8' : 'md:ml-8'}`}>
                  <div class="flex items-center gap-3 mb-2">
                    <span class="md:hidden w-8 h-8 bg-blue-900 text-white rounded-full flex items-center justify-center font-bold text-sm">
                      {step.step}
                    </span>
                    <h3 class="text-lg font-bold text-gray-800">{step.title}</h3>
                  </div>
                  <p class="text-gray-600 text-sm mb-2">{step.description}</p>
                  <p class="text-xs text-blue-600 font-medium">{step.time}</p>
                </div>
              </div>
              <div class="hidden md:flex items-center justify-center">
                <div class="w-10 h-10 bg-blue-900 text-white rounded-full flex items-center justify-center font-bold z-10">
                  {step.step}
                </div>
              </div>
              <div class="flex-1 hidden md:block"></div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 bg-blue-900 text-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Why Choose Madison Handyman Pro</h2>
        <p class="text-lg text-blue-100 max-w-2xl mx-auto">
          What sets our painting services apart from other contractors.
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white/10 rounded-lg p-6">
          <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold mb-2">Meticulous Prep Work</h3>
          <p class="text-blue-100 text-sm">
            90% of a great paint job is preparation. We don't cut corners — proper prep means paint that looks great and lasts.
          </p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold mb-2">Premium Paint Products</h3>
          <p class="text-blue-100 text-sm">
            We use Sherwin-Williams, Benjamin Moore, and Behr premium paints. Quality products = better coverage, richer color, longer life.
          </p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold mb-2">We Show Up On Time</h3>
          <p class="text-blue-100 text-sm">
            Appointment confirmed 24 hours AND 2 hours before arrival. No waiting around wondering if we'll show. Your time matters.
          </p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold mb-2">We Protect Your Home</h3>
          <p class="text-blue-100 text-sm">
            Drop cloths, plastic sheeting, careful taping. Your furniture, floors, and fixtures are fully protected. We leave homes spotless.
          </p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold mb-2">Transparent Pricing</h3>
          <p class="text-blue-100 text-sm">
            Detailed written quotes with no hidden fees. Your estimate is your price. We honor every quote we provide — no surprises.
          </p>
        </div>
        <div class="bg-white/10 rounded-lg p-6">
          <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold mb-2">Satisfaction Guaranteed</h3>
          <p class="text-blue-100 text-sm">
            We don't consider the job done until you're completely happy. Final walkthrough ensures every detail meets your expectations.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Frequently Asked Questions</h2>
        <p class="text-lg text-gray-600">
          Common questions about our painting services.
        </p>
      </div>
      <div class="space-y-4">
        {faqs.map((faq) => (
          <details class="bg-white rounded-lg border border-gray-200 group">
            <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
              <h3 class="font-semibold text-gray-800 pr-4">{faq.question}</h3>
              <svg class="w-5 h-5 text-gray-500 flex-shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="px-6 pb-6">
              <p class="text-gray-600">{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
