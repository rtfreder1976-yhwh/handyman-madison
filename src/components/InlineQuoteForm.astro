---
// InlineQuoteForm.astro
// Compact inline quote form for embedding on every page. Links to the full /quote page.
---

<section
    class="py-16 bg-gradient-to-br from-blue-900 via-blue-800 to-blue-900 relative overflow-hidden"
>
    <div class="absolute inset-0">
        <div
            class="absolute top-0 right-0 w-[400px] h-[400px] bg-orange-500/10 rounded-full blur-[100px] -mr-40 -mt-40"
        >
        </div>
        <div
            class="absolute bottom-0 left-0 w-[300px] h-[300px] bg-blue-400/10 rounded-full blur-[100px] -ml-40 -mb-40"
        >
        </div>
    </div>
    <div class="max-w-5xl mx-auto px-4 relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Left: Copy -->
            <div class="text-white">
                <span
                    class="text-orange-400 font-semibold text-sm uppercase tracking-wide"
                    >Ready to Get Started?</span
                >
                <h2 class="text-3xl md:text-4xl font-extrabold mt-2 mb-4">
                    Request Your Free Quote
                </h2>
                <p class="text-blue-100 text-lg mb-6 leading-relaxed">
                    Describe your project and we will respond within 3 hours
                    with honest pricing. No obligations, no pressure—just
                    straight answers from a certified carpenter with 7 years of
                    experience.
                </p>
                <div class="space-y-3 mb-6">
                    <div class="flex items-center gap-3">
                        <svg
                            class="w-5 h-5 text-green-400 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        <span class="text-blue-100"
                            >$1M liability insurance on every project</span
                        >
                    </div>
                    <div class="flex items-center gap-3">
                        <svg
                            class="w-5 h-5 text-green-400 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        <span class="text-blue-100"
                            >Work warranty & satisfaction guarantee</span
                        >
                    </div>
                    <div class="flex items-center gap-3">
                        <svg
                            class="w-5 h-5 text-green-400 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        <span class="text-blue-100"
                            >Family owned — no franchises, no runaround</span
                        >
                    </div>
                </div>
                <a
                    href="tel:+12562210373"
                    class="inline-flex items-center gap-2 text-white/80 hover:text-white transition-colors text-sm"
                >
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path></svg
                    >
                    Prefer to call? <strong class="text-white"
                        >(256) 221-0373</strong
                    >
                </a>
            </div>

            <!-- Right: Compact Form -->
            <div class="bg-white rounded-2xl shadow-2xl p-8">
                <h3 class="text-xl font-bold text-gray-900 mb-6">
                    Quick Quote Form
                </h3>
                <form id="inline-quote-form" class="space-y-4">
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label
                                for="iq-name"
                                class="block text-xs font-semibold text-gray-600 mb-1"
                                >Your Name *</label
                            >
                            <input
                                type="text"
                                id="iq-name"
                                name="name"
                                required
                                class="w-full px-3 py-2.5 rounded-lg border-2 border-gray-200 focus:border-blue-500 focus:ring-0 transition-colors text-gray-900 text-sm"
                                placeholder="John Smith"
                            />
                        </div>
                        <div>
                            <label
                                for="iq-phone"
                                class="block text-xs font-semibold text-gray-600 mb-1"
                                >Phone *</label
                            >
                            <input
                                type="tel"
                                id="iq-phone"
                                name="phone"
                                required
                                class="w-full px-3 py-2.5 rounded-lg border-2 border-gray-200 focus:border-blue-500 focus:ring-0 transition-colors text-gray-900 text-sm"
                                placeholder="(256) 221-0373"
                            />
                        </div>
                    </div>
                    <div>
                        <label
                            for="iq-service"
                            class="block text-xs font-semibold text-gray-600 mb-1"
                            >Service Needed *</label
                        >
                        <select
                            id="iq-service"
                            name="service"
                            required
                            class="w-full px-3 py-2.5 rounded-lg border-2 border-gray-200 focus:border-blue-500 focus:ring-0 transition-colors text-gray-900 text-sm bg-white"
                        >
                            <option value="">Select a service</option>
                            <option value="Drywall">Drywall</option>
                            <option value="Painting">Painting</option>
                            <option value="Flooring">Flooring</option>
                            <option value="Finish Carpentry"
                                >Finish Carpentry</option
                            >
                            <option value="Gutter Cleaning"
                                >Gutter Cleaning</option
                            >
                            <option value="Gutter Installation"
                                >Gutter Installation</option
                            >
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div>
                        <label
                            for="iq-details"
                            class="block text-xs font-semibold text-gray-600 mb-1"
                            >Brief Description *</label
                        >
                        <textarea
                            id="iq-details"
                            name="details"
                            rows="3"
                            required
                            class="w-full px-3 py-2.5 rounded-lg border-2 border-gray-200 focus:border-blue-500 focus:ring-0 transition-colors text-gray-900 text-sm resize-none"
                            placeholder="Briefly describe what you need done..."
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-6 rounded-xl transition-all duration-200 text-sm shadow-lg hover:shadow-xl hover:-translate-y-0.5 flex items-center justify-center gap-2"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"
                            ></path></svg
                        >
                        Send Quote Request
                    </button>
                    <p class="text-xs text-gray-400 text-center">
                        Or <a
                            href="/quote"
                            class="text-blue-600 hover:underline font-medium"
                            >use our detailed form</a
                        > for complex projects
                    </p>
                </form>

                <!-- Inline Success -->
                <div id="inline-success" class="hidden text-center py-8">
                    <div
                        class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4"
                    >
                        <svg
                            class="w-8 h-8 text-green-600"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                    </div>
                    <h4 class="text-lg font-bold text-gray-900 mb-1">
                        Request Sent!
                    </h4>
                    <p class="text-gray-600 text-sm">
                        We will respond within 3 hours.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const inlineForm = document.getElementById(
        "inline-quote-form",
    ) as HTMLFormElement;
    const inlineSuccess = document.getElementById("inline-success");

    if (inlineForm) {
        inlineForm.addEventListener("submit", (e) => {
            e.preventDefault();

            const formData = new FormData(inlineForm);
            const name = formData.get("name") || "";
            const phone = formData.get("phone") || "";
            const service = formData.get("service") || "";
            const details = formData.get("details") || "";

            const smsBody = `QUOTE REQUEST\nName: ${name}\nPhone: ${phone}\nService: ${service}\nDetails: ${details}`;
            const handymanNumber = "+12562210373";
            window.location.href = `sms:${handymanNumber}?body=${encodeURIComponent(smsBody)}`;

            inlineForm.classList.add("hidden");
            inlineSuccess?.classList.remove("hidden");
        });
    }
</script>
