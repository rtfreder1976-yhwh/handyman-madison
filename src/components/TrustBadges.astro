---
// TrustBadges.astro
---

<section class="py-8 bg-gray-900 border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-4">
        <div
            class="flex flex-col md:flex-row items-center justify-between gap-6"
        >
            <div class="text-center md:text-left">
                <p class="text-gray-400 font-medium text-sm">
                    Verified & Insured Partners
                </p>
                <p class="text-white font-bold text-lg">
                    Your Home is Fully Protected
                </p>
            </div>

            <div
                class="flex flex-wrap items-center justify-center md:justify-end gap-x-12 gap-y-6 opacity-70 grayscale hover:grayscale-0 transition-all duration-500"
            >
                <!-- BBB Logo -->
                <div
                    class="flex items-center justify-center overflow-hidden h-12 bg-white/5 rounded-lg border border-white/10 p-2"
                >
                    <img
                        src="/images/BBB_New.png"
                        alt="Better Business Bureau"
                        class="max-h-full w-auto max-w-[150px] object-contain brightness-0 invert opacity-90"
                    />
                </div>

                <!-- Insurance Badge Text/Icon -->
                <div class="flex items-center gap-3">
                    <svg
                        class="w-10 h-10 text-gray-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                        ></path></svg
                    >
                    <div>
                        <p class="text-white font-bold">$1M</p>
                        <p class="text-xs text-gray-400">Liability Policy</p>
                    </div>
                </div>

                <!-- Nextdoor Neighborhood Favorite -->
                <div class="flex items-center gap-3">
                    <svg
                        class="w-10 h-10 text-gray-300"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path
                            d="M12 2.1L1 12H4V21H20V12H23L12 2.1ZM12 4.7L18 10.1V19H6V10.1L12 4.7Z"
                        ></path>
                    </svg>
                    <div>
                        <p class="text-white font-bold">Nextdoor</p>
                        <p class="text-xs text-gray-400">Neighborhood Fave</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
