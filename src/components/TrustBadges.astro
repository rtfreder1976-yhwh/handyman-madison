---

<section class="py-8 bg-gray-900 border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-4">
        <div
            class="flex flex-col md:flex-row items-center justify-between gap-6"
        >
            <div class="text-center md:text-left">
                <p class="text-gray-400 font-medium text-sm">
                    Verified & Insured Partners
                </p>
                <p class="text-white font-bold text-lg">
                    Your Home is Fully Protected
                </p>
            </div>

            <div
                class="flex flex-wrap items-center justify-center md:justify-end gap-x-12 gap-y-6 opacity-70 grayscale hover:grayscale-0 transition-all duration-500"
            >
                <!-- BBB Logo -->
                <!-- BBB Accredited -->
                <a
                    href="https://www.bbb.org/us/al/somerville/profile/handyman/rittenworx-handyman-service-0513-900331002"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-3 cursor-pointer group hover:opacity-100 transition-opacity"
                >
                    <svg
                        class="w-10 h-10 text-gray-300 group-hover:text-blue-400 transition-colors duration-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                        ></path>
                    </svg>
                    <div>
                        <p
                            class="text-white font-bold group-hover:text-blue-400 transition-colors duration-300"
                        >
                            A+ Rated
                        </p>
                        <p class="text-xs text-gray-400">BBB Accredited</p>
                    </div>
                </a>

                <!-- Google 5.0 -->
                <div class="flex items-center gap-3">
                    <svg
                        class="w-10 h-10 text-gray-300"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path
                            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                        ></path>
                        <path
                            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                        ></path>
                        <path
                            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                        ></path>
                        <path
                            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                        ></path>
                    </svg>
                    <div>
                        <p class="text-white font-bold">5.0 Rating</p>
                        <p class="text-xs text-gray-400">Google Verified</p>
                    </div>
                </div>

                <!-- Yelp 5.0 -->
                <div class="flex items-center gap-3">
                    <div
                        class="w-10 h-10 bg-gray-300 rounded font-bold flex items-center justify-center text-gray-900 pb-0.5"
                        style="font-family: Arial, sans-serif;"
                    >
                        y*
                    </div>
                    <div>
                        <p class="text-white font-bold">5.0 Rating</p>
                        <p class="text-xs text-gray-400">Yelp Reviews</p>
                    </div>
                </div>

                <!-- Insurance Badge Text/Icon -->
                <div class="flex items-center gap-3">
                    <svg
                        class="w-10 h-10 text-gray-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                        ></path></svg
                    >
                    <div>
                        <p class="text-white font-bold">$1M</p>
                        <p class="text-xs text-gray-400">Liability Policy</p>
                    </div>
                </div>

                <!-- Nextdoor Neighborhood Favorite -->
                <div class="flex items-center gap-3">
                    <svg
                        class="w-10 h-10 text-gray-300"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path
                            d="M12 2.1L1 12H4V21H20V12H23L12 2.1ZM12 4.7L18 10.1V19H6V10.1L12 4.7Z"
                        ></path>
                    </svg>
                    <div>
                        <p class="text-white font-bold">Nextdoor</p>
                        <p class="text-xs text-gray-400">Neighborhood Fave</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
