---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />

    <!-- Performance: Resource Hints -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />

    <!-- Performance: Preload Critical Resources -->
    <link rel="preload" href="/favicon.svg" as="image" type="image/svg+xml" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    <!-- Performance: Theme Color for Mobile -->
    <meta name="theme-color" content="#1e3a8a" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <!-- Critical CSS: Above-fold styles inlined for faster FCP -->
    <style>
      /* Critical rendering path - inline above-fold styles */
      :root{--color-primary:#1e3a8a;--color-accent:#f97316}
      *,::before,::after{box-sizing:border-box;border:0 solid}
      html{line-height:1.5;-webkit-text-size-adjust:100%;font-family:system-ui,-apple-system,sans-serif}
      body{margin:0;min-height:100vh;min-height:100dvh;background-color:#f9fafb}
      .bg-blue-900{background-color:#1e3a8a}
      .text-white{color:#fff}
      .bg-gray-50{background-color:#f9fafb}
      .min-h-screen{min-height:100vh;min-height:100dvh}
      .flex{display:flex}
      .flex-col{flex-direction:column}
      .flex-1{flex:1 1 0%}
      .font-bold{font-weight:700}
      .text-2xl{font-size:1.5rem;line-height:2rem}
      .text-4xl{font-size:2.25rem;line-height:2.5rem}
      .py-4{padding-top:1rem;padding-bottom:1rem}
      .px-4{padding-left:1rem;padding-right:1rem}
      .max-w-6xl{max-width:72rem}
      .mx-auto{margin-left:auto;margin-right:auto}
      @media(min-width:768px){.md\\:flex-row{flex-direction:row}.md\\:items-center{align-items:center}.md\\:justify-between{justify-content:space-between}}
    </style>

    <!-- SEO Meta Tags -->
    <title>{title} | Madison Handyman Pro</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={`${title} | Madison Handyman Pro`} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Madison Handyman Pro" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={`${title} | Madison Handyman Pro`} />
    <meta name="twitter:description" content={description} />

    <!-- Geo Tags for Local SEO -->
    <meta name="geo.region" content="US-AL" />
    <meta name="geo.placename" content="Madison" />
    <meta name="geo.position" content="34.6993;-86.7483" />
    <meta name="ICBM" content="34.6993, -86.7483" />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

    <meta name="generator" content={Astro.generator} />

    <!-- JSON-LD Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

    <!-- Performance: Defer non-critical JS -->
    <script>
      // Optimize Web Vitals - report metrics
      if ('connection' in navigator) {
        // Adapt to network conditions
        const conn = navigator.connection;
        if (conn.saveData || conn.effectiveType === '2g') {
          document.documentElement.classList.add('save-data');
        }
      }

      // Intersection Observer for lazy loading below-fold content
      if ('IntersectionObserver' in window) {
        const lazyElements = document.querySelectorAll('.below-fold');
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              observer.unobserve(entry.target);
            }
          });
        }, { rootMargin: '100px' });
        lazyElements.forEach(el => observer.observe(el));
      }
    </script>
