---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- SEO Meta Tags -->
    <title>{title} | Madison Handyman Pro</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={`${title} | Madison Handyman Pro`} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Madison Handyman Pro" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={`${title} | Madison Handyman Pro`} />
    <meta name="twitter:description" content={description} />

    <!-- Geo Tags for Local SEO -->
    <meta name="geo.region" content="US-AL" />
    <meta name="geo.placename" content="Madison" />
    <meta name="geo.position" content="34.6993;-86.7483" />
    <meta name="ICBM" content="34.6993, -86.7483" />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

    <meta name="generator" content={Astro.generator} />

    <!-- JSON-LD Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50">
    <header class="bg-blue-900 text-white shadow-lg">
      <nav class="max-w-6xl mx-auto px-4 py-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <a href="/" class="text-2xl font-bold hover:text-blue-200 transition-colors">
            Madison Handyman Pro
          </a>
          <ul class="flex flex-wrap gap-1 md:gap-2">
            <li>
              <a
                href="/"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                Home
              </a>
            </li>
            <li>
              <a
                href="/services"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/services/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                Services
              </a>
            </li>
            <li>
              <a
                href="/locations"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/locations/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                Locations
              </a>
            </li>
            <li>
              <a
                href="/about"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/about/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                About
              </a>
            </li>
            <li>
              <a
                href="/contact"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/contact/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                Contact
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-gray-800 text-gray-300 py-8 mt-auto">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-white font-bold text-lg mb-3">Madison Handyman Pro</h3>
            <p class="text-sm">Your trusted local handyman serving Madison, Alabama and surrounding areas.</p>
          </div>
          <div>
            <h3 class="text-white font-bold text-lg mb-3">Quick Links</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/services" class="hover:text-white transition-colors">Our Services</a></li>
              <li><a href="/locations" class="hover:text-white transition-colors">Service Areas</a></li>
              <li><a href="/contact" class="hover:text-white transition-colors">Get a Quote</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-white font-bold text-lg mb-3">Contact</h3>
            <ul class="space-y-2 text-sm">
              <li>Madison, Alabama</li>
              <li>Phone: (256) 555-0123</li>
              <li>Email: info@madisonhandymanpro.com</li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-6 text-center text-sm">
          <p>&copy; {new Date().getFullYear()} Madison Handyman Pro. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
