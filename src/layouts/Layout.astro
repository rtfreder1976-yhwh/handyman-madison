        }
      ],
      "priceRange": "$$",
      "paymentAccepted": ["Cash", "Check", "Credit Card"],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Handyman Services",
        "itemListElement": [
          {
            "@type": "OfferCatalog",
