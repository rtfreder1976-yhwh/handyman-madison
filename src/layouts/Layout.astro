      "name": "Madison Handyman Pro",
      "description": "Professional handyman services in Madison, Alabama. Drywall, painting, flooring, finish carpentry, gutter cleaning, and gutter guard installation.",
      "url": "https://madisonhandymanpro.com",
      "telephone": "(256) 555-0123",
      "email": "info@madisonhandymanpro.com",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Madison",
        "addressRegion": "AL",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "34.6993",
        "longitude": "-86.7483"
      },
      "areaServed": [
        { "@type": "City", "name": "Madison", "addressRegion": "AL" },
        { "@type": "City", "name": "Huntsville", "addressRegion": "AL" },
        { "@type": "City", "name": "Decatur", "addressRegion": "AL" },
        { "@type": "City", "name": "Athens", "addressRegion": "AL" },
        { "@type": "City", "name": "Harvest", "addressRegion": "AL" },
        { "@type": "City", "name": "Meridianville", "addressRegion": "AL" }
      ],
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "08:00",
          "closes": "18:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "09:00",
