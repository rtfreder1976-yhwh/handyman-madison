---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Professional handyman services in Madison, Alabama. Quality repairs, maintenance, and home improvement." } = Astro.props;
const currentPath = Astro.url.pathname;
const canonicalURL = new URL(Astro.url.pathname, 'https://madisonhandymanpro.com');

