              <a
                href="/"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                Home
              </a>
            </li>
            <li>
              <a
                href="/services"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/services/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                Services
              </a>
            </li>
            <li>
              <a
                href="/locations"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/locations/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                Locations
              </a>
            </li>
            <li>
              <a
                href="/about"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/about/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                About
              </a>
            </li>
            <li>
              <a
                href="/contact"
                class:list={[
                  "px-4 py-2 rounded-lg transition-colors inline-block",
                  currentPath === "/contact/" ? "bg-blue-700 text-white" : "hover:bg-blue-800"
                ]}
              >
                Contact
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-gray-800 text-gray-300 py-8 mt-auto">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
